<selector xmlns:android="http://schemas.android.com/apk/res/android">
     <item android:state_pressed="true">
          <bitmap android:src="@drawable/play_pressed" android:gravity="center"/>
     </item>
     <item android:state_focused="true">
          <bitmap android:src="@drawable/play_hover" android:gravity="center"/>
     </item>
    <item android:state_enabled="false">
          <bitmap android:src="@drawable/play_disabled" android:gravity="center"/>
     </item>
     <item>
          <bitmap android:src="@drawable/play" android:gravity="center"/>
     </item>
</selector>
