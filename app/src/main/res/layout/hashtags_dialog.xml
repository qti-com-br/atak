<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/auto_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/auto_margin"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <com.atakmap.android.hashtags.view.HashtagEditText
            android:id="@+id/tag_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:hint="@string/sticky_tag_hint"/>
        <ImageButton
            android:id="@+id/add_tag"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="@dimen/auto_space_big"
            android:src="@drawable/ic_menu_plus"
            style="@style/darkButton"/>
    </LinearLayout>

    <ListView
        android:id="@+id/tag_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>