<?xml version="1.0" encoding="utf-8"?>

<com.atakmap.android.tools.ActionBarView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="0dp">

    <ImageButton
        android:id="@+id/newCircleButton"
        android:layout_height="@dimen/dropdown_bottom_bar_height"
        android:layout_width="@dimen/dropdown_bottom_bar_height"
        android:lines="0"
        android:background="@drawable/btn_gray"
        android:padding="6dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_menu_drawing_circle_toggle" />

    <ImageButton
        android:id="@+id/newRectangleButton"
        android:layout_height="@dimen/dropdown_bottom_bar_height"
        android:layout_width="@dimen/dropdown_bottom_bar_height"
        android:lines="0"
        android:background="@drawable/btn_gray"
        android:padding="6dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_menu_drawing_rect_toggle" />

    <ImageButton
        android:id="@+id/newShapeButton"
        android:layout_height="@dimen/dropdown_bottom_bar_height"
        android:layout_width="@dimen/dropdown_bottom_bar_height"
        android:lines="0"
        android:background="@drawable/btn_gray"
        android:padding="6dp"
        android:scaleType="centerInside"
        android:src="@drawable/sse_shape" />

    <ImageButton
        android:id="@+id/toggleScrollButton"
        style="@style/dflt_toolbar_btn_tool"
        android:layout_width="@dimen/dropdown_bottom_bar_height"
        android:layout_height="@dimen/dropdown_bottom_bar_height"
        android:scaleType="fitCenter"
        android:padding="6dp"
        android:background="@drawable/btn_gray"
        android:src="@drawable/ic_menu_drawing_telestrate_toggle"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/telestrationColorButton"
        style="@android:style/Widget.Holo.Button"
        android:drawableStart="@drawable/color_rectangle"
        android:padding="6dp"
        android:layout_width="@dimen/dropdown_bottom_bar_height"
        android:layout_height="@dimen/dropdown_bottom_bar_height"
        android:background="@drawable/btn_gray"
        android:visibility="gone"/>

    <Button
        android:id="@+id/undoButton"
        style="@style/dflt_toolbar_btn_tool"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dropdown_bottom_bar_height"
        android:background="@drawable/btn_gray"
        android:paddingStart="4dp" android:paddingEnd="4dp"
        android:text="@string/undo"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/telestration"
        android:layout_height="@dimen/dropdown_bottom_bar_height"
        android:layout_width="@dimen/dropdown_bottom_bar_height"
        android:lines="0"
        android:background="@drawable/btn_gray"
        android:padding="6dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_menu_drawing_telestrate_toggle" />
    
    <Button
        android:id="@+id/editShapeButton"
        style="@style/dflt_toolbar_btn_tool"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dropdown_bottom_bar_height"
        android:layout_alignParentTop="true"
        android:background="@drawable/btn_gray"
        android:paddingStart="4dp" android:paddingEnd="4dp"
        android:text="@string/end_editing"
        android:visibility="gone"/>
    
    <Button
        android:id="@+id/deleteTelestrationButton"
        style="@style/dflt_toolbar_btn_tool"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dropdown_bottom_bar_height"
        android:background="@drawable/btn_gray"
        android:paddingStart="4dp" android:paddingEnd="4dp"
        android:text="@string/details_text2"
        android:textColor="#FFFFFFFF"
        android:visibility="gone"/>
    
    <Button
        android:id="@+id/doneButton"
        style="@style/dflt_toolbar_btn_tool"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dropdown_bottom_bar_height"
        android:background="@drawable/btn_gray"
        android:text="@string/end"
        android:paddingStart="4dp" android:paddingEnd="4dp"
        android:visibility="gone"
        android:textColor="#FFFFFFFF"/>
    <Button
        android:id="@+id/doneDrawing"
        style="@style/dflt_toolbar_btn_tool"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dropdown_bottom_bar_height"
        android:background="@drawable/btn_gray"
        android:text="@string/details_text3"
        android:paddingStart="4dp" android:paddingEnd="4dp"
        android:visibility="gone"
        android:textColor="#FFFFFFFF"/>

</com.atakmap.android.tools.ActionBarView>
