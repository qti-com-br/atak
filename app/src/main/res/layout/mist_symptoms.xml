<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:orientation="vertical" >
    <EditText
        android:id="@+id/mist_s_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:maxLines = "4"
        android:scrollbars= "vertical"
        android:inputType="textNoSuggestions" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout 
                      android:id="@+id/mist_s_buttons"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical" >
            <LinearLayout 
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal" >
                <TextView
                    android:id="@+id/bleeding_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="0dp"
                    android:text="@string/mist_s_bleeding_label"
                    />
                <Button
                    android:id="@+id/mist_s_bleeding_minimal"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="10dp" style="@style/darkButton"
                    android:text="@string/mist_s_bleeding_minimal"
                    />
                <Button
                    android:id="@+id/mist_s_bleeding_massive"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="10dp" style="@style/darkButton"
                    android:text="@string/mist_s_bleeding_massive"
                    />
            </LinearLayout>
            <LinearLayout 
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal" >
                <TextView
                    android:id="@+id/airway_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="0dp"
                    android:text="@string/mist_s_airway_label"
                    />
                <Button
                    android:id="@+id/mist_s_airway_has"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="10dp" style="@style/darkButton"
                    android:text="@string/mist_s_airway_has"
                    />
                <Button
                    android:id="@+id/mist_s_airway_no"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="10dp" style="@style/darkButton"
                    android:text="@string/mist_s_airways_no"
                    />
            </LinearLayout>
            <LinearLayout 
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal" >
                <TextView
                    android:id="@+id/radial_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="0dp"
                    android:text="@string/mist_s_radial_label"
                    />
                <Button
                    android:id="@+id/mist_s_radial_has"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="10dp" style="@style/darkButton"
                    android:text="@string/mist_s_radial_has"
                    />
                <Button
                    android:id="@+id/mist_s_radial_no"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="10dp" style="@style/darkButton"
                    android:text="@string/mist_s_radial_no"
                    />
            </LinearLayout>
            <LinearLayout 
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal" >
                <TextView
                    android:id="@+id/pulse_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="0dp"
                    android:text="@string/mist_s_pulse_label"
                    />
                <Button
                    android:id="@+id/mist_s_pulse_strong"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="10dp" style="@style/darkButton"
                    android:text="@string/mist_s_pulse_strong"
                    />
                <Button
                    android:id="@+id/mist_s_pulse_weak"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="10dp" style="@style/darkButton"
                    android:text="@string/mist_s_pulse_weak"
                    />
            </LinearLayout>
            <LinearLayout 
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal" >
                <TextView
                    android:id="@+id/skin_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="0dp"
                    android:text="@string/mist_s_skin_label"
                    />
                <Button
                    android:id="@+id/mist_s_skin_warm"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="10dp" style="@style/darkButton"
                    android:text="@string/mist_s_skin_warm"
                    />
                <Button
                    android:id="@+id/mist_s_skin_cold"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="10dp" style="@style/darkButton"
                    android:text="@string/mist_s_skin_cold"
                    />
            </LinearLayout>
            <LinearLayout 
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal" >
                <TextView
                    android:id="@+id/pupils_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="0dp"
                    android:text="@string/mist_s_pupil_label"
                    />
                <Button
                    android:id="@+id/mist_s_pupils_constricted"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="10dp" style="@style/darkButton"
                    android:text="@string/mist_s_pupil_constricted"
                    />
                <Button
                    android:id="@+id/mist_s_pupils_dialated"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="10dp" style="@style/darkButton"
                    android:text="@string/mist_s_pupil_dilated"
                    />
                <Button
                    android:id="@+id/mist_s_pupils_normal"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="10dp" style="@style/darkButton"
                    android:text="@string/mist_s_pupil_normal"
                    />

            </LinearLayout>
            <LinearLayout 
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal" >
                <TextView
                    android:id="@+id/breathing_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="0dp"
                    android:text="@string/mist_s_breathing_label"
                    />
                <Button
                    android:id="@+id/mist_s_breathing_labored"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="10dp" style="@style/darkButton"
                    android:text="@string/mist_s_breathing_labored"
                    />
                <Button
                    android:id="@+id/mist_s_breathing_normal"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="10dp" style="@style/darkButton"
                    android:text="@string/mist_s_breathing_normal"
                    />
                <Button
                    android:id="@+id/mist_s_breathing_absent"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="10dp" style="@style/darkButton"
                    android:text="@string/mist_s_breathing_absent"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
