<?xml version="1.0" encoding="utf-8"?>
<com.atakmap.android.missionpackage.ui.FileTransferLogView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        
        <ImageView
            android:id="@+id/iconMissionPackageLogIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/missionpackage_log_withbackground"/>
                       
        <TextView
            android:text="@string/file_transfer_log"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/auto_space"
            android:textSize="18sp"
            android:textStyle="bold"/>
               
        <ImageButton
            android:id="@+id/btnMissionPackageLogDelete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="@dimen/auto_margin"
            android:src="@drawable/ic_menu_delete"
            style="@style/darkButton"/>

    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">    
        <ListView
            android:id="@+id/missionpackage_log_listView"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>
    
  

</com.atakmap.android.missionpackage.ui.FileTransferLogView>
