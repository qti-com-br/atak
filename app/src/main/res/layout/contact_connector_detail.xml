<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:fadeScrollbars="false"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/contactInfoConnectorDetailIcon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="3dp"
                    android:src="@drawable/email_icon"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="false" />

                <TextView
                    android:id="@+id/contactInfoConnectorDetailText"
                    android:layout_height="wrap_content"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:gravity="start|center_vertical"
                    android:text="@string/default_connector" />

                <CheckBox
                    android:id="@+id/contactInfoConnectorDetailDefaultChk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_default"
                    android:enabled="false"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:padding="1dp"
                android:background="@color/lighter_gray"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/contactInfoConnectorAddressLabel"
                    android:layout_alignParentTop="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:text="@string/contact_address"
                    android:layout_marginEnd="5dip"/>
                <TextView
                    android:id="@+id/contactInfoConnectorAddressText"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:gravity="start"
                    android:text="@string/contact_address"
                    android:textColor="#FFF"
                    android:layout_below="@id/contactInfoConnectorAddressLabel" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:padding="1dp"
                android:background="@color/lighter_gray"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/contactInfoConnectorLastUsedLabel"
                    android:layout_alignParentTop="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:text="@string/last_used"
                    android:layout_marginEnd="5dip"/>
                <TextView
                    android:id="@+id/contactInfoConnectorLastUsedText"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:gravity="start"
                    android:text="@string/last_used"
                    android:textColor="#FFF"
                    android:layout_below="@id/contactInfoConnectorLastUsedLabel" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:padding="1dp"
                android:background="@color/lighter_gray"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/contactInfoConnectorHandlerLabel"
                    android:layout_alignParentTop="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:text="@string/contact_handler"
                    android:layout_marginEnd="5dip"/>
                <TextView
                    android:id="@+id/contactInfoConnectorHandlerText"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:gravity="start"
                    android:text="@string/contact_handler"
                    android:textColor="#FFF"
                    android:layout_below="@id/contactInfoConnectorHandlerLabel" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/contactInfoConnectorProfileLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/contactInfoConnectorProfileLabel"
                    android:layout_alignParentTop="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:text="@string/profile"
                    android:layout_marginEnd="5dip"/>

                <ImageButton
                    android:id="@+id/contactInfoConnectorProfileBtn"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="3dp"
                    android:src="@drawable/ic_profile_white"
                    android:layout_below="@id/contactInfoConnectorProfileLabel"
                    android:scaleType="fitCenter"
                    style="@style/darkButton" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

