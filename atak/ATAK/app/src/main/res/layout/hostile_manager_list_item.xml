<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radiogroupfools"
            android:clickable="false"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:orientation="vertical"
                android:layout_toStartOf="@+id/hierarchy_manager_list_item_freespace"
                android:layout_alignParentStart="true">

                <TextView
                    android:id="@+id/hierarchy_manager_list_item_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_lower"
                    android:textColor="#ffffffff"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/hierarchy_manager_list_item_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dashdashdash"
                    android:textSize="12sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/hierarchy_manager_list_item_cf"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:text="@string/dashdashdash"
                        android:textSize="12sp" />
    
                    <TextView
                        android:id="@+id/hierarchy_manager_list_item_cca"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:text="@string/dashdashdash"
                        android:textSize="12sp" />

                 </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/hierarchy_manager_list_item_freespace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true">

                <ImageButton
                    android:id="@+id/hostile_manager_list_item_nine_btn"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_menu_nineline"
                    android:padding="3dp"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="false"
                    style="@style/darkButton" />
    </LinearLayout>
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>
