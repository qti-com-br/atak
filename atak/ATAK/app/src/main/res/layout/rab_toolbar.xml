<?xml version="1.0" encoding="utf-8"?>
<com.atakmap.android.tools.ActionBarView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:layout_marginTop="0dp"
    android:layout_marginBottom="0dp">

    <ImageButton
        android:id="@+id/buttonDynamicRangeAndBearing"
        android:layout_width="@dimen/dropdown_bottom_bar_height"
        android:layout_height="@dimen/dropdown_bottom_bar_height"
        android:background="@drawable/btn_gray"
        android:src="@drawable/ic_drag_ruler_toggle"
        android:padding="6dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:lines="0" />

    <ImageButton
        android:id="@+id/buttonRangeAndBearing"
        android:layout_width="@dimen/dropdown_bottom_bar_height"
        android:layout_height="@dimen/dropdown_bottom_bar_height"
        android:background="@drawable/btn_gray"
        android:src="@drawable/ic_ruler_toggle"
        android:padding="6dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:lines="0" />

    <ImageButton
        android:id="@+id/buttonCircle"
        android:layout_width="@dimen/dropdown_bottom_bar_height"
        android:layout_height="@dimen/dropdown_bottom_bar_height"
        android:background="@drawable/btn_gray"
        android:src="@drawable/ic_menu_rb_circle_toggle"
        android:padding="6dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:lines="0" />

    <ImageButton
        android:id="@+id/buttonBullseye"
        android:layout_width="@dimen/dropdown_bottom_bar_height"
        android:layout_height="@dimen/dropdown_bottom_bar_height"
        android:background="@drawable/btn_gray"
        android:src="@drawable/ic_rab_bullseye"
        android:scaleType="fitCenter"
        android:padding="7dp"
        android:adjustViewBounds="true"
        android:lines="0" />

</com.atakmap.android.tools.ActionBarView>
