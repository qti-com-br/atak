<?xml version="1.0" encoding="utf-8"?>
<com.atakmap.android.tools.ActionBarView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="0dp">

     <ImageButton
        android:id="@+id/fillerA"
        android:layout_width="18dp"
        android:layout_height="@dimen/dropdown_bottom_bar_height"
        android:background="@drawable/btn_gray"
        android:lines="0"
        android:visibility="invisible"
        android:scaleType="fitCenter"
        android:src="@drawable/details" />


    <ImageButton
        android:id="@+id/importFile"
        android:layout_width="@dimen/dropdown_bottom_bar_height"
        android:layout_height="@dimen/dropdown_bottom_bar_height"
        android:background="@drawable/btn_gray"
        android:lines="0"
        android:padding="6dip"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_menu_plus" />

    <ImageButton
        android:id="@+id/buttonImageDetails"
        android:layout_width="@dimen/dropdown_bottom_bar_height"
        android:layout_height="@dimen/dropdown_bottom_bar_height"
        android:background="@drawable/btn_gray"
        android:lines="0"
        android:padding="6dip"
        android:scaleType="fitCenter"
        android:src="@drawable/image_details" />

    <ImageButton
        android:id="@+id/buttonImageMultiSelect"
        android:layout_width="@dimen/dropdown_bottom_bar_height"
        android:layout_height="@dimen/dropdown_bottom_bar_height"
        android:background="@drawable/btn_gray"
        android:padding="6dip"
        android:lines="0"
        android:scaleType="fitCenter"
        android:src="@drawable/multiselect" />

    <!-- Hide the default close button -->
    <Button
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

     <ImageButton
        android:id="@+id/fillerB"
        android:layout_width="18dp"
        android:layout_height="@dimen/dropdown_bottom_bar_height"
        android:background="@drawable/btn_gray"
        android:lines="0"
        android:visibility="invisible"
        android:scaleType="fitCenter"
        android:src="@drawable/details" />


</com.atakmap.android.tools.ActionBarView>
