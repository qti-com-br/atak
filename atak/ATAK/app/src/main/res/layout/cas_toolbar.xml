<?xml version="1.0" encoding="utf-8"?>
<com.atakmap.android.tools.ActionBarView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="0dp">

    <ImageButton
        android:id="@+id/buttonSPI1"
        android:layout_width="@dimen/dropdown_bottom_bar_height"
        android:layout_height="@dimen/dropdown_bottom_bar_height"
        android:padding="6dp"
        android:background="@drawable/btn_gray"
        android:contentDescription="@string/stringSPIDesc"
        android:scaleType="fitCenter"
        android:lines="0" 
        android:src="@drawable/ic_spi1_off"/>

    <ImageButton
        android:id="@+id/buttonSPI2"
        android:layout_width="@dimen/dropdown_bottom_bar_height"
        android:layout_height="@dimen/dropdown_bottom_bar_height"
        android:padding="6dp"
        android:background="@drawable/btn_gray"
        android:contentDescription="@string/stringSPIDesc"
        android:scaleType="fitCenter"
        android:lines="0" 
        android:visibility="gone"
        android:src="@drawable/ic_spi2_off"/>

    <ImageButton
        android:id="@+id/buttonSPI3"
        android:layout_width="@dimen/dropdown_bottom_bar_height"
        android:layout_height="@dimen/dropdown_bottom_bar_height"
        android:padding="6dp"
        android:background="@drawable/btn_gray"
        android:contentDescription="@string/stringSPIDesc"
        android:scaleType="fitCenter"
        android:lines="0" 
        android:visibility="gone"
        android:src="@drawable/ic_spi3_off"/>

    <ImageButton
        android:id="@+id/buttonLaser"
        android:layout_width="@dimen/dropdown_bottom_bar_height"
        android:layout_height="@dimen/dropdown_bottom_bar_height"
        android:padding="6dp"
        android:background="@drawable/btn_gray"
        android:scaleType="fitCenter"
        android:lines="0" 
        android:visibility="gone"
        android:src="@drawable/ic_laser_toggle"/>

    <ImageButton
        android:id="@+id/buttonCASDynamicRangeAndBearing"
        android:layout_width="@dimen/dropdown_bottom_bar_height"
        android:layout_height="@dimen/dropdown_bottom_bar_height"
        android:padding="6dp"
        android:visibility="gone"
        android:background="@drawable/btn_gray"
        android:src="@drawable/ic_drag_ruler_toggle"
        android:scaleType="fitCenter"
        android:lines="0" />

    <ImageButton
        android:id="@+id/buttonPlaceHostile"
        android:layout_width="@dimen/dropdown_bottom_bar_height"
        android:layout_height="@dimen/dropdown_bottom_bar_height"
        android:padding="6dp"
        android:background="@drawable/btn_gray"
        android:scaleType="fitCenter"
        android:lines="0"
        android:src="@drawable/ic_hostile_toggle"/>

    <ImageButton
        android:id="@+id/hostileManager"
        android:layout_width="@dimen/dropdown_bottom_bar_height"
        android:layout_height="@dimen/dropdown_bottom_bar_height"
        android:padding="6dp"
        android:background="@drawable/btn_gray"
        android:scaleType="fitCenter"
        android:lines="0"
        android:src="@drawable/ic_hostile_mgr"/>

    <ImageButton
        android:id="@+id/mgrsGoto"
        android:layout_width="@dimen/dropdown_bottom_bar_height"
        android:layout_height="@dimen/dropdown_bottom_bar_height"
        android:padding="6dp"
        android:background="@drawable/btn_gray"
        android:scaleType="fitCenter"
        android:lines="0"
        android:src="@drawable/ic_mgrs_goto"/>

</com.atakmap.android.tools.ActionBarView>
