<?xml version="1.0" encoding="utf-8"?>
<shape
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:shape="oval"
  android:useLevel="false">
  
  <gradient 
      android:type="radial"
      android:gradientRadius="50.0%"
      android:startColor="#0000FF"
      android:endColor="#000099"
      android:centerColor="#000099"/>
  
  <stroke
    android:width="1dp"
    android:color="#0000FF" />
  
  <size
      android:width="20dp"
      android:height="20dp" />
  
  <padding
      android:left="2dp"
      android:right="2dp"
      android:top="2dp"
      android:bottom="2dp" />
</shape>