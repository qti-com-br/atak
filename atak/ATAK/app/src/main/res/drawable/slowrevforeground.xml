<selector xmlns:android="http://schemas.android.com/apk/res/android" android:constantSize="true">
     <item android:state_pressed="true">
          <bitmap android:src="@drawable/slowrev_pressed" android:gravity="center"/>
     </item>
     <item android:state_focused="true">
          <bitmap android:src="@drawable/slowrev_hover" android:gravity="center"/>
     </item>
    <item android:state_enabled="false">
          <bitmap android:src="@drawable/slowrev_disabled" android:gravity="center"/>
     </item>
     <item>
          <bitmap android:src="@drawable/slowrev" android:gravity="center"/>
     </item>
</selector>
